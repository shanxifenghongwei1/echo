@import '/utils/wxss/store.wxss';
.header_module {
  height: 100rpx;
  padding:0% 2%；
}
.header_Area{
width: 19%;
color:#fff;
font-weight: bold;
justify-content: center;
}

.search_module {
  width: 79%;
  background-color: #fff;
  border-radius: 30rpx;

}

.search_module input {
  height: 60rpx;
  width: 100%;
  padding-left: 4%;
  font-size: 24rpx;
  border: 0;
}

.search_module view {
  width: 90rpx;
  font-size: 55rpx;
  text-align: center;
  color: #f05f5f;
}

.slide-image {
  width: 100%;
  display: block;
}

.nav_module {
  border-bottom: 1px solid #f2f2f2;
}

.nav_item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav_item view {
  width: 25%;
  display: inline-block;
  text-align: center;
  position: relative;
}

.nav_item .nav_active::before {
  position: absolute;
  bottom: -1px;
  left: 22%;
  content: "";
  width: 50%;
  border: 2px solid #ed4444;
}

.guide {
  font-size: 40rpx;
  width: 8%;
  line-height: 80rpx;
  text-align: center;
  background-color: #eee;
}
.store_module{
  border-bottom: 1px solid #ddd;
  padding-bottom: 2.5%;
}
.marketing {
  align-items: flex-start;
}

.marketing-border {
  border-right: 1px solid #f2f2f2;
}

.marketing>view:first-child {
  width: 39.2%;
}

.marketing>view:last-child {
  width: 60%;
  border-right: 1px solid #f2f2f2;
}

.marketing2 {
  border-top: 1px solid #f2f2f2;
}

.marketing2 view {
  width: 50%;
}

.marketing image {
  width: 100%;
  display: block;
}

