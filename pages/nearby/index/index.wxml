<!-- 附近商家模块 副首页 -->
   <view class='shop-list'>
    <view wx:for="{{dataList}}" wx:key="dataListKey" class='store_module flex_about'>
      <navigator url='/pages/index/oddments/oddments?shop_id={{item.id}}&juli={{item.juli}}' data-id="{{item.id}}" class='store_info flex_about'>
        <view class='info_img_icon'>
          <image src='{{app.host.resources}}/grounding.png' mode='widthFix'></image>
          <text class='global_small_font flex_about'>{{item.cat_name}}</text>
        </view>
        <view class='info_img'>
          <image src='{{item.shop_logo}}' mode='widthFix'></image>
        </view>
        <view class='info_content'>
          <view class="info_title global_middle_font global_multiLine">{{item.shop_name}}</view>
          <view class='ic_info'>
            <text class="global_middle_font global_color_red"><text class='iconfont icon-huaduo'></text>热度:{{item.hot}}</text>
            <text class="global_middle_font">距离:{{item.juli}}</text>
          </view>
          <view class='ic_info'>
            <text class="global_middle_font">总订单数:{{item.order_form}}</text>
          </view>
        </view>
      </navigator>
      <view class='iconfont icon-dianhua store_phone'  bindtap='makePhoneCall' data-phone="{{item.iphone}}">
      </view>
    </view>
    <view class='prompt'>
      <prompt id="prompt"></prompt>
    </view>
  </view>
</scroll-view>