<scroll-view style='height:{{scrollHeight}}rpx;' scroll-top="0" bindscrolltolower="scrolltolower" scroll-with-animation scroll-y class='page_module global_bg_color'>
  <view class='global_bg_color_red flex_about header_module '>
    <view class='global_middle_font flex_about header_Area '>
      {{areaText}}
      <view class='iconfont icon-jiantouxia'></view>
    </view>
    <view class='search_module flex_about'>
      <input placeholder='输入商品名，类别'>
      </input>
      <view class='iconfont icon-sousuo'></view>
    </view>
  </view>
  <swiper indicator-dots="true" autoplay="true" indicator-color="#fff" indicator-active-color="#ed4040" interval="3000" duration="500" style="height:{{swiperHeight}}rpx;">
    <block wx:for="{{imgUrls}}" wx:key="imgUrlsKey">
      <swiper-item>
        <image src="/images/test/{{item}}" class="slide-image" mode='widthFix' bindload="imageLoad" />
      </swiper-item>
    </block>
  </swiper>
  <view class=' flex_about marketing'>
    <view class='marketing-border'>
      <image src='/images/test/pic2.jpg' mode='widthFix'></image>
    </view>
    <view>
      <view>
        <image src='/images/test/pic3.jpg' mode='widthFix'></image>
      </view>
      <view class='flex_about marketing2'>
        <view class='marketing-border'>
          <image src='/images/test/pic4.jpg' mode='widthFix'></image>
        </view>
        <view>
          <image src='/images/test/pic5.jpg' mode='widthFix'></image>
        </view>
      </view>
    </view>
  </view>

  <view class="newline"></view>
  <view class='nav_module flex_about global_bg_color'>
    <scroll-view scroll-x class='nav_item '>
      <view bindtap='navClick' wx:for="{{navArray}}" wx:key="navArrayKey" data-index="{{index}}" class="global_large_font {{navActive==index?'nav_active':''}}">
        {{item}}
      </view>
    </scroll-view>
    <view class=' iconfont icon-arrow-right-copy guide global_color_red'>
    </view>
  </view>
