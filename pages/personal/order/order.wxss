/* pages/order/order.wxss */

.any {
  width: 100%;
  height: 100vh;
  background: #eee;
}

.top {
  width: 100%;
  height: 90rpx;
  background: #fd4949;
}

.ico {
  margin-left: 40rpx;
  float: left;
  width: 10%;
  font-size: 40rpx;
  line-height: 90rpx;
  color: white;
}

.tex {
  font-size: 40rpx;
  float: left;
  width: 80%;
  height: 90rpx;
  color: white;
  line-height: 90rpx;
}

.order {
  width: 100%;
  height: 80rpx;
  background: white;
  display: flex;
  justify-content: center;
}

.order-son {
  width: 30%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  font-size: 25rpx;
}

.active {
  border-bottom: 1rpx solid red;
  color: red;
}

.really {
  border-top: 1rpx solid #eee;
  width: 100%;
  height: 90rpx;
  background: white;
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 10rpx 40rpx;
}

.my-order {

  background: white;
  border-bottom: 20rpx solid #eee;
}

.shop {
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #eee;
}

.shop-name {
  padding-left: 20rpx;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  float: left;
  line-height: 70rpx;
}

.state {
  padding-left: 20rpx;
  font-size: 24rpx;
  width: 40%;
  height: 100%;
  line-height: 70rpx;
  float: left;

  text-align: right;
}

.commdity {
  border-bottom: 1rpx solid #eee;
  padding: 2%;
  align-items: flex-start;
}

.commdity-pic {
  width: 25%;
}

.commdity-pic image {
  width: 100%;
  display: block;
}

.commdity-particulars {
  width: 73%;
  margin-left: 2%;
}
.commdity-particulars>view{
  justify-content: space-between;
}
.commdity-particulars>view:nth-child(2){
  margin-top:2%;
}
.commdity-particulars>view:nth-child(3){
margin-top:7%;
}



.time {
  line-height: 80rpx;
  justify-content: space-between;
}

.time>view:last-child{
  width: 40%;
  text-align: right;
  justify-content: flex-end;
}
.payfor {
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  width: 100rpx;
  border-radius: 10rpx;
  margin-left: 10%;

}