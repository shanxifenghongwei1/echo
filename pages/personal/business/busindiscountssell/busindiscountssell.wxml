
<!-- 优惠券发布页面 -->
<form bindsubmit="{{gotype==1?'change':'addshopproduct'}}">
<!-- 活动店铺 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动店铺：</view>
    <input name='goods_name' class=' global_middle_font one-module-input' value='{{goods.goods_name}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>
<!-- 店铺名称 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>店铺名称：</view>
    <input name='goods_name' class=' global_middle_font one-module-input' value='{{goods.goods_name}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 优惠券类型 -->
  <view class='one-module'>
    <view style='width:24%;' class=' global_middle_font one-module-text'>优惠券类型：</view>
    <radio-group style='width:74%;' class="radio_group one-module-input" bindchange="radioChange" name="radio_group">
      <radio class="radio" wx:for-items="{{items}}" wx:key="name" value="{{item.id}}" checked="{{item.checked}}">
        <text>{{item.value}}</text>
      </radio>
    </radio-group>
  </view>

  <!-- 优惠券数量 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>优惠券数量：</view>
    <input name='goods_brief' class=' global_middle_font one-module-input' value='{{goods.goods_brief}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 优惠金额 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>优惠金额：</view>
    <input name='shop_price' class=' global_middle_font one-module-input' value='{{goods.shop_price}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 开始时间 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>开始时间：</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 结束时间 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>结束时间：</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>
	  <!-- 优惠券介绍 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>介绍:</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

	  <!-- 是否出售 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>是否出售：</view>
    <radio-group class="radio_group one-module-input" bindchange="radioChanges" name="radio_group">
      <radio class="radio" wx:for-items="{{atems}}" wx:key="name" value="{{item.id}}" checked="{{item.checked}}">
        <text>{{item.value}}</text>
      </radio>
    </radio-group>
  </view>
	  <!-- 出售价格 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>出售价格:</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>
	  <!-- 不出售地区 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>不出售地区:</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>
		  <!-- 不出售行业 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>不出售行业:</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>
			  <!-- 出售数量 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>出售数量:</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>
  <!-- 提交 	-->
  <button wx:if='{{gotype==1}}' style='width:80%;height:80rpx;' type='primary' form-type="submit">确认添加</button>
  <button wx:if='{{!gotype==1}}' style='width:80%;height:80rpx;' type='primary' form-type="submit">提交</button>
  <view style='width:90%;height:80rpx;'></view>
</form>