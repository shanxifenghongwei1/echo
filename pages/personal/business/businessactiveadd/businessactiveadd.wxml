<!-- 产品发布页面 -->
<!-- 产品名称 -->
<form bindsubmit="addshopproduct">

  <!-- 商品详细建扫把 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动类型：</view>
    <radio-group class="radio_group one-module-input" bindchange="radioChange" name="radio_group">
      <radio class="radio" wx:for-items="{{items}}" wx:key="name" value="{{item.id}}" checked="{{item.checked}}">
        <text>{{item.value}}</text>
      </radio>
    </radio-group>
  </view>

  <!-- 商品关键词 -->
  <view class='one-module'>
    <view class='global_middle_font one-module-text'>附赠优惠券：</view>
    <view name='keywords' class='one-module-input iconfont icon-jiantouxia' style='text-align:right;'> {{}}</view>
  </view>

	<!-- 优惠券 -->
<view style='width:94%;padding:3%'>

 <view class='ticket flex_about'>
        <view style='font-size:35rpx;' class=' global_color_red ticket_money flex_about '>满赠券
        </view>
        <view class="ticket_info">
          <view class='global_middle_font line-inline global_color_red'>{{item.money}}</view>
        </view>
        <view class="payment flex_about global_large_font">
          <view class='iconfont icon-hongbaojuchi-copy'></view>
          <view class='flex_about payment1'>使用</view>
        </view>
      </view>

</view>
  <!-- 商品详细建扫把 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动标题：</view>
    <input name='goods_brief' class=' global_middle_font one-module-input' value='{{goods.goods_brief}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 产品单价 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动简介：</view>
    <input name='shop_price' class=' global_middle_font one-module-input' value='{{goods.shop_price}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 产品数量 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动内容：</view>
    <input name='goods_number' class=' global_middle_font one-module-input' value='{{goods.goods_number}}' placeholder-style='font-size:28rpx;color:#666;'> </input>
  </view>

  <!-- 活动时间 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动开始时间：</view>
    <picker mode='date' name='goods_number' class='global_middle_font one-module-input'> </picker>
  </view>
	
	  <!-- 结束时间 -->
  <view class='one-module'>
    <view class=' global_middle_font one-module-text'>活动结束时间：</view>
    <picker mode='date'  name='goods_number' class=' global_middle_font one-module-input'> </picker>
  </view>

  <!-- 提交 	-->
  <button style='width:80%;height:80rpx;' type='primary' form-type="submit">修改</button>
  <view style='width:90%;height:80rpx;'></view>
</form>